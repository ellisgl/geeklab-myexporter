<table class="table table-striped table-responsive">
    <thead>
        <tr>
            <th scope="col" class="text-start">Table Name</th>
            <th scope="col" class="size-col">Size</th>
            <th scope="col" class="checkbox-col">Schema</th>
            <th scope="col" class="checkbox-col">Data</th>
        </tr>
    </thead>
    <tbody>
        {% for table in tables %}
            <tr>
                <td class="text-start">1</td>
                <td>999M</td>
                <td>
                    <input class="form-check-input" type="checkbox" name="schema['table1']" value="1" title="table1 schema">
                </td>
                <td>
                    <input class="form-check-input" type="checkbox" name="data['table1']" value="1" title="table1 data">
                </td>
            </tr>
        {% endfor %}
    </tbody>
</table>
